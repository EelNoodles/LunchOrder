<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementSettingActivity"
    android:background="@mipmap/background">

    <ImageView
        android:id="@+id/comlogo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/comlogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/comlogo"
        android:id="@+id/AnnouncementTitle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22dp"
        android:text="公告標題"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/AnnouncementTitleEdit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_below="@id/AnnouncementTitle"
        android:layout_centerHorizontal="true"
        android:hint="請輸入標題"
        android:gravity="center_vertical"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_below="@+id/AnnouncementTitleEdit"
        android:id="@+id/AnnouncementMessage"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22dp"
        android:text="公告內容"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/AnnouncementMessageEdit"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_below="@id/AnnouncementMessage"
        android:layout_centerHorizontal="true"
        android:hint="請輸入公告內容"
        android:inputType="textMultiLine"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AnnouncementLinkTitle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/AnnouncementMessageEdit"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22dp"
        android:text="公告連結"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/AnnouncementLinkEdit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_below="@id/AnnouncementLinkTitle"
        android:layout_centerHorizontal="true"
        android:hint="請輸入網址"
        android:gravity="center_vertical"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AnnouncementSendButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/AnnouncementLinkEdit"
        android:text="確定"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>