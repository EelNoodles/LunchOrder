<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrinkDetailActivity"
    android:background="@mipmap/background">

    <ImageView
        android:id="@+id/comlogo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/comlogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/DrinkDetailsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comlogo"
        android:layout_marginTop="20dp"
        android:text="你的餐點名稱"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/DrinkDetailsPrice"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DrinkDetailsName"
        android:text="你的餐點名稱"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/DrinkDetailsCount"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DrinkDetailsPrice"
        android:text="請選擇數量"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/DrinkDetailsElegantNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DrinkDetailsCount"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:textSize="10dp">


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <TextView
        android:id="@+id/DrinkDetailsSweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DrinkDetailsPrice"
        android:layout_marginStart="70dp"
        android:text="選擇甜度"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DrinkDetailsIce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DrinkDetailsPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="選擇冰塊量"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/DrinkAddToOrderList"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_below="@id/DrinkDetailsElegantNumberButton"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="確認訂餐"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</RelativeLayout>