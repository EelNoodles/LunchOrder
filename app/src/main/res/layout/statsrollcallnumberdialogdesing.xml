<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/StatsRollCallNumberDialogTitleBackground"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">>

        <TextView
            android:id="@+id/StatsRollCallNumberDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/StatsRollCallNumberDialogMainStatsDetails"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/StatsRollCallNumberDialogTitleBackground"
        android:textColor="@color/colorBlack"
        android:text="應到人數\n（全班人數 - 調查不來人數 - 請假人數 - 晚到人數）\n實到人數\n（應到人數 - 缺曠人數）"
        android:textSize="11dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/StatsRollCallNumberDialogMainStats"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/StatsRollCallNumberDialogMainStatsDetails"
        android:textColor="@color/colorRed"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/StatsRollCallNumberDialogSubStats"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/StatsRollCallNumberDialogMainStats"
        android:textColor="@color/colorBlue"
        android:textSize="16dp"/>

</RelativeLayout>