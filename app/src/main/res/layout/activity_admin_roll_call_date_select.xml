<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRollCallDateSelect"
    android:background="@mipmap/background">

    <TextView
        android:id="@+id/DateSelectText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="24dp"
        android:text="點名日期"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/adminrollcallDateSelectEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/DateSelectText"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="adminrollcalldatePicker"
        android:hint="點我選擇日期"
        android:textColorHint="@color/colorWhite"
        android:editable="false"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/adminrollcallUserSelectDateButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/adminrollcallDateSelectEditText"
        android:text="選擇"
        android:textSize="15dp"
        android:layout_alignEnd="@+id/adminrollcallDateSelectEditText"/>

    <Button
        android:id="@+id/adminrollcallUserSelectDateLogoutButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/adminrollcallDateSelectEditText"
        android:text="離開"
        android:layout_alignStart="@+id/adminrollcallDateSelectEditText" />

</RelativeLayout>