<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInHomeWork"
    android:background="@mipmap/background">

    <ImageView
        android:id="@+id/comlogo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/comlogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/HomeWorkSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/comlogo"
        android:text="【請選擇科目】"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/HomeWorkTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkSubject"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="功課標題"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/HomeWorkTitleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkTitleText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:hint="請點此輸入。"
        android:inputType="text"
        android:textSize="18dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/HomeWorkDeadLineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkTitleEdit"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="功課最後繳交期限"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/HomeWorkDeadLineEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkDeadLineText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:editable="false"
        android:onClick="DatePicker"
        android:hint="請點此輸入。"
        android:textSize="18dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/HomeWorkRemarksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkDeadLineEdit"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="功課備註"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/HomeWorkRemarksEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeWorkRemarksText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:hint="請點此輸入。"
        android:inputType="text"
        android:textSize="18dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/HomeWorkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HomeWorkRemarksEdit"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"
        android:text="登入"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"/>

    <Button
        android:id="@+id/HomeWorkCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HomeWorkRemarksEdit"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="刪除功課"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"/>



</RelativeLayout>