<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/adminstatsimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/userlight"/>

    <TextView
        android:id="@+id/usernumber"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/adminstatsimage"
        android:layout_alignTop="@+id/adminstatsimage"
        android:gravity="center"
        android:text="edaweed"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/adminstatsimage"
        android:layout_below="@+id/usernumber"
        android:gravity="center"
        android:text="edaweed"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/username"
        android:gravity="center"
        android:text="出席"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorWhite" />


</RelativeLayout>